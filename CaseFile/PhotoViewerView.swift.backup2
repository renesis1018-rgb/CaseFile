import SwiftUI
import CoreData
import AppKit

import UniformTypeIdentifiers
struct PhotoViewerView: View {
    let photos: [Photo]
    let initialIndex: Int
    @Environment(\.dismiss) private var dismiss
    
    @State private var currentIndex: Int
    @State private var zoomScale: CGFloat = 1.0
    @State private var showToast = false
    @State private var toastMessage = ""
    @FocusState private var isFocused: Bool
    
    init(photos: [Photo], initialIndex: Int) {
        self.photos = photos
        self.initialIndex = initialIndex
        _currentIndex = State(initialValue: initialIndex)
    }
    
    var currentPhoto: Photo {
        photos[currentIndex]
    }
    
    var body: some View {
        ZStack {
            // ËÉåÊôØ
            Color.black.opacity(0.95)
                .ignoresSafeArea()
            
            VStack(spacing: 0) {
                // „Éò„ÉÉ„ÉÄ„Éº
                HStack {
                    // Ââç„ÅÆÂÜôÁúü
                    Button(action: previousPhoto) {
                        Image(systemName: "chevron.left.circle.fill")
                            .font(.system(size: 32))
                    }
                    .buttonStyle(.plain)
                    .foregroundColor(.white)
                    .disabled(currentIndex == 0)
                    .opacity(currentIndex == 0 ? 0.3 : 1.0)
                    .keyboardShortcut(.leftArrow, modifiers: [])
                    
                    Spacer()
                    
                    // ÂÜôÁúüÊÉÖÂ†±
                    VStack(spacing: 5) {
                        Text("\(currentPhoto.angle ?? "‰∏çÊòé") | \(currentPhoto.timing ?? "‰∏çÊòé")")
                            .font(.headline)
                            .foregroundColor(.white)
                        
                        Text("\(currentIndex + 1) / \(photos.count)")
                            .font(.caption)
                            .foregroundColor(.white.opacity(0.7))
                    }
                    
                    Spacer()
                    
                    // Ê¨°„ÅÆÂÜôÁúü
                    Button(action: nextPhoto) {
                        Image(systemName: "chevron.right.circle.fill")
                            .font(.system(size: 32))
                    }
                    .buttonStyle(.plain)
                    .foregroundColor(.white)
                    .disabled(currentIndex == photos.count - 1)
                    .opacity(currentIndex == photos.count - 1 ? 0.3 : 1.0)
                    .keyboardShortcut(.rightArrow, modifiers: [])
                    
                    Spacer().frame(width: 20)
                    
                    // Èñâ„Åò„Çã„Éú„Çø„É≥
                    Button(action: { dismiss() }) {
                        Image(systemName: "xmark.circle.fill")
                            .font(.system(size: 32))
                    }
                    .buttonStyle(.plain)
                    .foregroundColor(.white)
                    .keyboardShortcut(.escape, modifiers: [])
                }
                .padding()
                .background(Color.black.opacity(0.5))
                
                // ÂÜôÁúüË°®Á§∫„Ç®„É™„Ç¢
                GeometryReader { geometry in
                    if let imageData = currentPhoto.imageData,
                       let nsImage = NSImage(data: imageData),
                       let cgImage = nsImage.cgImage(forProposedRect: nil, context: nil, hints: nil) {
                        
                        ScrollView([.horizontal, .vertical], showsIndicators: true) {
                            Image(decorative: cgImage, scale: 1.0)
                                .resizable()
                                .scaledToFit()
                                .scaleEffect(zoomScale)
                                .frame(minWidth: geometry.size.width * zoomScale,
                                       minHeight: geometry.size.height * zoomScale)
                                .onDrag {
                                    return createDragItem(imageData: imageData)
                                }
                        }
                        .frame(maxWidth: .infinity, maxHeight: .infinity)
                        
                    } else {
                        VStack {
                            Image(systemName: "photo")
                                .font(.system(size: 100))
                                .foregroundColor(.white.opacity(0.3))
                            Text("ÁîªÂÉè„ÇíË™≠„ÅøËæº„ÇÅ„Åæ„Åõ„Çì")
                                .foregroundColor(.white.opacity(0.5))
                        }
                        .frame(maxWidth: .infinity, maxHeight: .infinity)
                    }
                }
                
                // „Éï„ÉÉ„Çø„ÉºÔºàÊìç‰Ωú„Éú„Çø„É≥Ôºâ
                HStack(spacing: 20) {
                    // „Ç∫„Éº„É†„Ç¢„Ç¶„Éà
                    Button(action: { zoomOut() }) {
                        HStack {
                            Image(systemName: "minus.magnifyingglass")
                            Text("Á∏ÆÂ∞è")
                        }
                    }
                    .disabled(zoomScale <= 0.5)
                    
                    // „Ç∫„Éº„É†Ë°®Á§∫
                    Text("\(Int(zoomScale * 100))%")
                        .foregroundColor(.white)
                        .frame(width: 60)
                        .padding(6)
                        .background(Color.white.opacity(0.2))
                        .cornerRadius(6)
                    
                    // „Ç∫„Éº„É†„É™„Çª„ÉÉ„Éà
                    Button(action: { withAnimation { zoomScale = 1.0 } }) {
                        Text("„É™„Çª„ÉÉ„Éà")
                    }
                    .disabled(zoomScale == 1.0)
                    
                    // „Ç∫„Éº„É†„Ç§„É≥
                    Button(action: { zoomIn() }) {
                        HStack {
                            Image(systemName: "plus.magnifyingglass")
                            Text("Êã°Â§ß")
                        }
                    }
                    .disabled(zoomScale >= 3.0)
                    
                    Divider()
                        .frame(height: 20)
                        .background(Color.white)
                    
                    // „É™„É≥„ÇØ„Ç≥„Éî„Éº
                    Button(action: { copyImageLink() }) {
                        HStack {
                            Image(systemName: "link")
                            Text("ÊÉÖÂ†±„Ç≥„Éî„Éº")
                        }
                    }
                    
                    // ÁîªÂÉè„Çí„Éï„Ç°„Ç§„É´„Å®„Åó„Å¶‰øùÂ≠ò
                    Button(action: { saveImageToFile() }) {
                        HStack {
                            Image(systemName: "square.and.arrow.down")
                            Text("‰øùÂ≠ò")
                        }
                    }
                }
                .buttonStyle(.bordered)
                .tint(.white)
                .padding()
                .background(Color.black.opacity(0.5))
            }
            
            // „Éà„Éº„Çπ„ÉàÈÄöÁü•
            if showToast {
                VStack {
                    Text(toastMessage)
                        .padding()
                        .background(Color.black.opacity(0.8))
                        .foregroundColor(.white)
                        .cornerRadius(8)
                        .padding(.top, 80)
                    Spacer()
                }
                .transition(.move(edge: .top).combined(with: .opacity))
            }
        }
        .focusable()
        .focused($isFocused)
        .onAppear {
            isFocused = true
        }
    }
    
    // MARK: - Functions
    
    private func previousPhoto() {
        if currentIndex > 0 {
            withAnimation {
                currentIndex -= 1
                zoomScale = 1.0
            }
        }
    }
    
    private func nextPhoto() {
        if currentIndex < photos.count - 1 {
            withAnimation {
                currentIndex += 1
                zoomScale = 1.0
            }
        }
    }
    
    private func zoomIn() {
        withAnimation {
            zoomScale = min(zoomScale + 0.5, 3.0)
        }
    }
    
    private func zoomOut() {
        withAnimation {
            zoomScale = max(zoomScale - 0.5, 0.5)
        }
    }
    
    private func createDragItem(imageData: Data) -> NSItemProvider {
        let fileName = generateFileName()
        let tempURL = FileManager.default.temporaryDirectory.appendingPathComponent(fileName)
        
        do {
            try imageData.write(to: tempURL)
            let provider = NSItemProvider(contentsOf: tempURL)!
            showToastMessage("üìé „Éâ„É©„ÉÉ„Ç∞„Åó„Å¶‰ªñ„ÅÆ„Ç¢„Éó„É™„Å´Ë≤º„Çä‰ªò„Åë„Åß„Åç„Åæ„Åô")
            return provider
        } catch {
            print("‚ùå „Éâ„É©„ÉÉ„Ç∞„Ç¢„Ç§„ÉÜ„É†‰ΩúÊàê„Ç®„É©„Éº: \(error)")
            return NSItemProvider()
        }
    }
    
    private func generateFileName() -> String {
        let timing = currentPhoto.timing ?? "unknown"
        let angle = currentPhoto.angle ?? "unknown"
        let dateFormatter = DateFormatter()
        dateFormatter.dateFormat = "yyyyMMdd_HHmmss"
        let dateString = currentPhoto.exifDate.map { dateFormatter.string(from: $0) } ?? "nodate"
        
        return "photo_\(timing)_\(angle)_\(dateString).jpg"
    }
    
    private func saveImageToFile() {
        guard let imageData = currentPhoto.imageData else { return }
        
        let panel = NSSavePanel()
        panel.nameFieldStringValue = generateFileName()
        panel.allowedContentTypes = [.jpeg]
        
        if panel.runModal() == .OK, let url = panel.url {
            do {
                try imageData.write(to: url)
                showToastMessage("‚úÖ ÁîªÂÉè„Çí‰øùÂ≠ò„Åó„Åæ„Åó„Åü")
            } catch {
                showToastMessage("‚ùå ‰øùÂ≠ò„Å´Â§±Êïó„Åó„Åæ„Åó„Åü")
            }
        }
    }
    
    private func copyImageLink() {
        let info = """
        ÊôÇÊúü: \(currentPhoto.timing ?? "‰∏çÊòé")
        ËßíÂ∫¶: \(currentPhoto.angle ?? "‰∏çÊòé")
        ÊíÆÂΩ±Êó•: \(formatDate(currentPhoto.exifDate))
        Ë°ìÂæåÁµåÈÅé: \(currentPhoto.daysAfterSurgery)Êó•
        """
        
        let pasteboard = NSPasteboard.general
        pasteboard.clearContents()
        pasteboard.setString(info, forType: .string)
        
        showToastMessage("üìã ÂÜôÁúüÊÉÖÂ†±„Çí„Ç≥„Éî„Éº„Åó„Åæ„Åó„Åü")
    }
    
    private func formatDate(_ date: Date?) -> String {
        guard let date = date else { return "‰∏çÊòé" }
        let formatter = DateFormatter()
        formatter.dateStyle = .medium
        formatter.timeStyle = .short
        formatter.locale = Locale(identifier: "ja_JP")
        return formatter.string(from: date)
    }
    
    private func showToastMessage(_ message: String) {
        toastMessage = message
        withAnimation {
            showToast = true
        }
        
        DispatchQueue.main.asyncAfter(deadline: .now() + 2) {
            withAnimation {
                showToast = false
            }
        }
    }
}
